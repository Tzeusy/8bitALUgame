// Comparator module
module comp (
  input alufn[2],
  input z,
  input v,
  input n,
  output compared[8]
) {   
  sig comp;
  always {
    case(alufn) {
      b01: comp=z; // this compares whether they are equal with the help of z from the adder.
      b10: comp=n^v; // this compares whether they are lesser than 
      b11: comp=z|(n^v); // this compares whether they are equal
      default: comp=0;
    }
    compared = 0;
    compared[0] = comp;
  }
}