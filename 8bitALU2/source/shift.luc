//shifter module 
module shift (
input alufn[2],
input a[8],
input b[8],

output shifted[8]
) {
  
  always	{
    
    
  	case (alufn)
  	{
    	b00: shifted=a<<b; // left shift a by b
    	b01: shifted=a>>b; // right shift a by b
    	b11: shifted=$signed(a)>>>b; // shift with sign
    	default: shifted=8b0;  
  	}
	} 
}